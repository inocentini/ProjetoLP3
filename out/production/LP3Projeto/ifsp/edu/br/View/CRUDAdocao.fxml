      </TableView>
      <Button fx:id="btnInserir" layoutX="284.0" layoutY="264.0" mnemonicParsing="false" onAction="#handleInserirAnimal" text="Inserir" />
      <TableView fx:id="tableAnimalOut" layoutX="351.0" layoutY="201.0" prefHeight="150.0" prefWidth="201.0">
        <columns>
          <TableColumn fx:id="tableAnimalOutId" prefWidth="30.0" text="id" />
          <TableColumn fx:id="tableAnimalOutApelido" prefWidth="169.0" text="Animais" />
        </columns>
      </TableView>
      <Button fx:id="btnCadastrar" layoutX="399.0" layoutY="361.0" mnemonicParsing="false" onAction="#handleCadastrarAdocao" text="Cadastrar" />
      <Button fx:id="btnVoltar" layoutX="485.0" layoutY="361.0" maxWidth="67.0" mnemonicParsing="false" onAction="#handleVoltar" prefWidth="67.0" text="Voltar" />
      <TableView fx:id="tableUser" layoutX="9.0" layoutY="50.0" prefHeight="100.0" prefWidth="261.0">
