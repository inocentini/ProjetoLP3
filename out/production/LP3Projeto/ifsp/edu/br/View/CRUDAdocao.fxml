   <children>
      <TableView fx:id="tableDog" layoutX="8.0" layoutY="201.0" prefHeight="150.0" prefWidth="130.0">
        <columns>
          <TableColumn fx:id="tableDogId" prefWidth="30.0" text="id" />
            <TableColumn fx:id="tableDogApelido" prefWidth="100.0" text="Cachorro" />
