        </columns>
      </TableView>
      <Label fx:id="labPesquisar" layoutX="14.0" layoutY="14.0" text="Pesquisar:" />
      <TextField fx:id="txtPesquisar" layoutX="75.0" layoutY="10.0" onKeyReleased="#pesquisarUser" prefHeight="25.0" prefWidth="195.0" />
      <GridPane layoutX="351.0" layoutY="64.0" prefHeight="133.0" prefWidth="201.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="50.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="193.0" minWidth="10.0" prefWidth="151.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="labUser" text="Usuário:" />
            <Label fx:id="labData" text="Data:" GridPane.rowIndex="1" />
            <Label fx:id="labAnimais" text="Animais:" GridPane.rowIndex="2" />
            <TextField fx:id="txtUser" GridPane.columnIndex="1" />
            <Label fx:id="labDate" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </GridPane>
      <Label fx:id="labPesquisarPet" layoutX="14.0" layoutY="164.0" text="Pesquisar:" />
      <TextField fx:id="txtPesquisarPet" layoutX="70.0" layoutY="160.0" onKeyReleased="#pesquisarAnimal" prefHeight="25.0" prefWidth="120.0" />
      <TableView fx:id="tableCat" layoutX="139.0" layoutY="201.0" prefHeight="150.0" prefWidth="130.0">
         <columns>
            <TableColumn fx:id="tableCatId" prefWidth="30.0" text="id" />
            <TableColumn fx:id="tableCatApelido" prefWidth="100.0" text="Gato" />
         </columns>
      </TableView>
      <RadioButton fx:id="rbtnCachorro" layoutX="197.0" layoutY="154.0" mnemonicParsing="false" text="Cachorro">
         <toggleGroup>
            <ToggleGroup fx:id="animal" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rbtnGato" layoutX="197.0" layoutY="175.0" mnemonicParsing="false" text="Gato" toggleGroup="$animal" />
      <Label fx:id="labAdocao" layoutX="388.0" layoutY="22.0" text="Adoção de PET">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
